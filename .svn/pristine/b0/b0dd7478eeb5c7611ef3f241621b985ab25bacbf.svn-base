.search-table {
    padding-left: 25px;
    font-size: 1rem;
    background: 0 0;
    border: 0;
    height: 35px;
    border-radius: 0;
    width: 100%;
    border-bottom: 1px solid #f1f1f1;
}

.Pending {
    background-color: #57b23c;
}

.nopadding {
    padding: 0 !important;
}

.Accepted {
    background-color: #f5f5f5;
}

.Canceled {
    background-color: red;
}

.Delivered {
    background-color: #57b23c;
}

.table th, .table td {
    vertical-align: top;
    padding: 1rem 1.5rem;
}

a.btn.btn-primary.waves-effect.pull-right {
    background: #607D8B;
}

.paginate_button.current {
    background-color: #607D8B;
}

.paginate_button {
    border-radius: 3px;
}

.btn-secondary {
    border-color: #dbdbdb;
}

.select2-container--default .select2-selection--single .select2-selection__rendered {
    padding: 0rem 0rem !important;
}

.select2-container {
    width: 100% !important;
}

.form-control, .select2-container--default .select2-selection--single {
    color: #444;
    background: #fff;
    padding: 9px 0px;
    text-indent: 21px;
    border: 1px solid #dfdfdf;
}

    .form-control:focus {
        background: #fff;
        border: 1px solid #ddd;
    }

.content__title {
    border: 1px solid #dfdfdf;
    padding-bottom: 7px;
}

.form-group:not(.form-group--float) > label {
    display: block;
}

.custom-radio .custom-control-indicator:before {
    left: 4px;
    top: 4px;
}

.inline_block {
    display: inline-block !important;
}

.form-control:disabled, .form-control[readonly] {
    opacity: .6;
    background-color: #e6e6e6;
    border: 1px solid #ccc;
}

.dataTables_info {
    margin-top: 60px;
}

.noborder.nav.nav-tabs.nav-fill {
    border-bottom: 0;
}

.form-group {
    margin-bottom: 5px;
}

.edt-crnr-btn {
    position: absolute;
    right: 10px;
    top: 10px;
}

.select2-container--default .select2-selection--single .select2-selection__rendered {
    padding: .65rem 2.1rem;
}

.nomargin {
    margin: 0 !important;
}

.dataTables_wrapper {
    margin-top: 20px;
}

.card-block.tbl {
    padding-top: 5px;
}

dataTables_wrapper {
    margin-top: 0px;
}

.dataTables_empty {
    text-align: center;
    padding: 30px !important;
}

.td.badge-pill {
    font-size: 11px;
    box-shadow: 1px 1px 1px #ccc;
    vertical-align: top;
    line-height: 9px;
    text-align: center;
}

span.or-ordernumber {
    border: 2px solid #464a4c;
    padding: 10px 32px;
    color: black;
    background: #fefefe;
    font-size: 24px;
}

.invoice__address {
    font-size: 14px;
}

span.status {
    border-radius: 6px;
    padding: 2px;
    color: white;
    /* margin-top: 7px;*/
}

.invoice__attrs__item {
    background-color: #f1f1f1;
    border: 1px solid #dfdfdf;
    min-height: 58px;
    padding: 0.5rem 0rem;
}

.label-warning {
    background-color: rgb(255, 165, 0);
}

span.right {
    float: right;
    font-size: 10px !important;
    font-weight: 700;
    border-radius: 3px;
    margin-top: 16px;
}

.listview__content.oactivity {
    padding: 5px;
    background: #fefefe;
    border-radius: 3px;
    border-bottom: 1px solid #dfdfdf;
}

.label-info {
    background-color: deepskyblue;
}

.label-success {
    background-color: #32c787;
}

.label-danger {
    background-color: red;
}

.label-deliver {
    background-color: darkcyan;
}

.listview__content {
    padding: 1px;
    background-color: rgba(222, 222, 222, 0.19);
    /* border-radius: 7px; */
    margin-top: 1px;
}

a.totalDisplay {
    color: white;
    font-size: larger;
}

.article {
    border-right: 4px solid #f3f3f3;
}

div.dt-buttons {
    position: absolute !important;
    right: 0;
    top: 9px;
    display: block;
    float: none;
}

.list-art {
}

    .list-art .listview__item {
        display: flex;
        align-items: center;
        padding: 15px 0px;
        transition: background-color .3s;
        border-bottom: 1px solid #f3f3f3;
        margin-left: -15px;
    }

    .list-art .listview__content {
        padding: 1px;
        background-color: rgba(208, 208, 208, 0.09);
        border-bottom: 0px solid rgba(0, 0, 0, 0.08);
        /* border-radius: 7px; */
        margin-top: 1px;
    }

    .list-art .listview__img {
        margin: 0px 3px;
    }

.sidebar {
    background: #fff;
    border-right: 1px solid #ddd;
}


.roles {
    display: inline-flex;
}

@media (min-width: 1200px) {
    .content:not(.content--boxed):not(.content--full) {
        padding: 102px 30px 0 280px;
    }
}

.dashboard .card {
    background: #fff;
    box-shadow: 0px 2px 5px 0px #dfdfdf;
    border: 1px solid #dfdfdf !important;
}

[data-columns]::before {
    display: block;
    visibility: hidden;
    position: absolute;
    font-size: 1px;
}

.card_last_update {
    position: absolute;
    top: 10px;
    right: 10px;
}

    .card_last_update span {
        color: #888;
        font-size: 10px;
    }

    .card_last_update .zmdi {
        font-size: 16px;
        font-weight: normal;
        vertical-align: middle;
    }

.chart {
    width: 100%;
    min-height: 450px;
}

form > center {
    padding: 10px;
}

.m-header {
    /*background:#fff;*/
    padding: 10px;
    margin-bottom: 5px;
    border-radius: 5px;
    display: inline-flex;
    width: 100%;
}

.m-title, .sup_header {
    padding: 8px;
    margin-top: auto;
    color: #676767;
    font-size: 1.4rem;
    font-weight: 400;
}

#add_prod {
    color: #03A9F4;
}

.m-search {
    top: 10px;
    position: absolute;
    left: 16px;
    bottom: 6px;
    font-size: 1.3rem;
    color: #333;
}
