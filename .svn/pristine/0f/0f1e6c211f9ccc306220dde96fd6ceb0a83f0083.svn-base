    border-bottom: 1px solid #f1f1f1;
    width: 100%;
    margin-bottom: -7px;
}

.Pending {
    background-color: #57b23c;
}

.Accepted {
    background-color: #f5f5f5;
}

.Canceled {
    background-color: red;
}

.Delivered {
    background-color: #57b23c;
}

.table th, .table td {
    vertical-align: top;
    padding: 1rem 1.5rem;
}

a.btn.btn-primary.waves-effect.pull-right {
    background: #607D8B;
}

.paginate_button.current {
    background-color: #607D8B;
}

.paginate_button {
    border-radius: 3px;
}

.btn-secondary {
    border-color: #dbdbdb;
}

.form-control, .select2-container--default .select2-selection--single {
    border-bottom: 1px solid #dbdbdb;
    color: #444;
}

    .form-control:disabled, .form-control[readonly] {
        opacity: .6;
        background-color: #e6e6e6;
    }

.dataTables_info {
    margin-top: 60px;
}

.noborder.nav.nav-tabs.nav-fill {
    border-bottom: 0;
}

.edt-crnr-btn {
    position: absolute;
    right: 10px;
    top: 10px;
}

.select2-container--default .select2-selection--single .select2-selection__rendered {
    padding: .65rem 2.1rem;
}


.dataTables_wrapper {
    margin-top: 20px;
}

.card-block.tbl {
    padding-top: 5px;
}

dataTables_wrapper {
    margin-top: 0px;
}

.dataTables_empty {
    text-align: center;
    padding: 30px !important;
}

.td.badge-pill {
    font-size: 11px;
    box-shadow: 1px 1px 1px #ccc;
    vertical-align: top;
    line-height: 9px;
    text-align: center;
}

span.or-ordernumber {
    border: 1px solid gray;
    padding: 6px;
    color: black;
    background: rgba(99, 108, 114, 0.25);
}

span.status {
    border-radius: 6px;
    padding: 2px;
    color: white;
    /* margin-top: 7px;*/
}

.label-warning {
    background-color: rgb(255, 165, 0);
}

span.right {
    float: right;
    font-size: 12px !important;
}

.label-info {
    background-color: deepskyblue;
}

.label-success {
    background-color: #32c787;
}

.label-danger {
    background-color: red;
}

.label-deliver {
    background-color: darkcyan;
}

.listview__content {
    padding: 1px;
    background-color: rgba(222, 222, 222, 0.19);
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    /* border-radius: 7px; */
    margin-top: 1px;
}

a.totalDisplay {
    color: white;
    font-size: larger;
}

.article {
    border-right: 4px solid #f3f3f3;
}

.list-art {
}

    .list-art .listview__item {
        display: flex;
        align-items: center;
        padding: 15px 0px;
        transition: background-color .3s;
        border-bottom: 1px solid #f3f3f3;
        margin-left: -15px;
    }

    .list-art .listview__content {
        padding: 1px;
        background-color: rgba(208, 208, 208, 0.09);
        border-bottom: 0px solid rgba(0, 0, 0, 0.08);
        /* border-radius: 7px; */
        margin-top: 1px;
    }

    .list-art .listview__img {
        margin: 0px 3px;
    }
