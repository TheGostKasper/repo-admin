@model IEnumerable<AMS.Models.Models.MerchantProduct>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table  class="table table-striped table-hover" id="list">
    <thead class="thead-default">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MerchantId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubCategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MerchantId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubCategoryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td> <td>
                    <div class="pull-right">
                            <a class="btn btn-secondary btn--icon-text" href="~/merchant/Edit/@item.Id"><span><i class="zmdi zmdi-edit zmdi-hc-fw"></i></span></a>
                            <a class="btn btn-secondary btn--icon-text" href="~/merchant/Details/@item.Id"><span><i class="zmdi zmdi-more zmdi-hc-fw"></i></span></a>
                            <a class="btn btn-danger btn--icon-text" href="~/merchant/Delete/@item.Id"><span><i class="zmdi zmdi-delete zmdi-hc-fw"></i></span></a>
                </div>
                        </td>
            </tr>
        }
    </tbody>


</table>
