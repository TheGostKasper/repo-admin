@model AMS.Models.Models.MerchantProduct

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="title"><a class="btn btn-secondary btn--icon-text waves-effect" href="~/MerchantProduct/"><span><i class="zmdi zmdi-arrow-back"></i> Back</span></a></h2>

