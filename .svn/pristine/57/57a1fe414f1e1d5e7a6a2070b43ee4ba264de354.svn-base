@model AMS.Models.Item

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="title">
     <a class="btn btn-secondary btn--icon-text waves-effect" href="~/merchant/"><span><i class="zmdi zmdi-arrow-back"></i></span></a>Item
</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NameEN)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameEN)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NameAR)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameAR)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubCategoryId)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubCategoryId)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Volume)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Volume)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UnitId)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnitId)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>

        <dd class="col-sm-10">
            <div class="image_view_box">
                <img id="image_view" src="@Model.ImageUrl" alt="cat_img" style="display:block" />
            </div>
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>

        <dd class="col-sm-10">
            @Model.CreationDate.Value.ToLocalTime().ToString("dd/MM/yyyy hh:mm:ss tt")
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="submit" class="btn btn-outline-primary waves-effect">Delete</button>
        </div>
    }
</div>
