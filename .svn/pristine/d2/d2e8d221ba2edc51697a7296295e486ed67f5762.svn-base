@model IEnumerable<AMS.Models.Models.MerchantDetails>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content_inner">
    <div class="card">
        <div class="card-block">
            <a href="~/merchant/create" class="btn btn--action btn--fixed btn-danger waves-effect"><i class="zmdi zmdi-plus"></i></a>
            <table class="table table-bordered" id="list">
                <thead class="thead-default">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.NameEN)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NameAR)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Phone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AccountState)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Currency)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreationDate)
                        </th>
                        <th class="nosorting"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.NameEN)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NameAR)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccountState)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Currency)
                            </td>
                            <td>
                                @{
                                    DateTime date = DateTime.Parse(Html.DisplayFor(modelItem => item.CreationDate.Value).ToString());
                                    @date.ToString("dd/MM/yyyy 'at' hh:mm tt")
                                }
                            </td>
                            <td>
                                <div class="pull-right">
                                    <a class="btn btn-secondary btn--icon-text" href="~/merchant/Edit/@item.Id"><span><i class="zmdi zmdi-edit zmdi-hc-fw"></i></span></a>
                                    <a class="btn btn-secondary btn--icon-text" href="~/merchant/Details/@item.Id"><span><i class="zmdi zmdi-more zmdi-hc-fw"></i></span></a>
                                    <a class="btn btn-danger btn--icon-text del" data-id="@item.Id" data-toggle="modal" data-target="#merchantModal" href="#"><span><i class="zmdi zmdi-delete zmdi-hc-fw"></i></span></a>
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="merchantModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Delete Merchant!!</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                Are you sure ?
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" id="delMerchant" data-dismiss="modal">Delete</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>




@section scripts{
    <script>

        (function () {
            var currId;
            $('a.del').on('click',function(){
                currId=$(this).data('id');
            });
            $('#delMerchant').on('click', function () {
                var _this = $('a.del[data-id=' + currId + ']');
                $.post('@Url.Action("Delete")', { id: currId }).then(function (dt) {
                    $.notify({
                        icon: '',
                        title: ' Delete merchant',
                        message: 'Merchant Deleted Successfully',
                        url: ''
                    }, {
                        element: 'body',
                        type: 'success'
                    });
                   _this.parent().parent().parent().hide()
                }, function (err) {
                    $.notify({
                        icon: '',
                        title: ' Error',
                        message: 'Error Happened while deleting Merchant!',
                        url: ''
                    }, {
                        element: 'body',
                        type: 'error'
                    });
                })
            });
        }());
    </script>
}


