    <h4>MerchantProduct</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MerchantId)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MerchantId)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemId)
