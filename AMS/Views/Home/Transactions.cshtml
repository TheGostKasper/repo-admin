
@{
    ViewBag.Title = "Transactions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="selectDiv">
    <select class="selectDataTable" style="width:100%">
        <option value="1">Today</option>
        <option value="7">Week</option>
        <option value="30">Month</option>
        <option value="-1">Range</option>
    </select>
</div>

<table id="OrderTransaction" class="table table-striped" cellspacing="0" style="width:100%">
    <thead>
        <tr>
            <th class="nosorting"> Order Number</th>
            <th class="nosorting"> Merchant</th>
            <th class="nosorting"> Handled By</th>
            <th class="nosorting"> Total</th>
            @*<th class="nosorting"> Creation Date</th>*@
            <th class="nosorting"> Collection Date</th>
            <th class="nosorting"> Due Date</th>
            <th class="nosorting"> Notes</th>
            <th class="nosorting"> Collected</th>
            <th class="nosorting"> </th>
        </tr>
    </thead>
    <tfoot>
    </tfoot>
</table>

<div id="myOrderModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Order</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    @*<label for="recipient-name" class="form-control-label"></label>*@
                    <input type="text" class="form-control" style="margin-left:23%;" id="order-number" placeholder="Order Number Or Id">
                </div>
                <div class="form-group">
                    <p class="warning pg-notfound hide">Order not found</p>
                    <table id="order-search" class="hide products-search-Info table table-striped table-hover dataTable no-footer" cellspacing="0">
                        <thead class="thead-default">
                            <tr>
                                <th class="nosorting"> Id</th>
                                <th class="nosorting"> Order Number</th>
                                <th class="nosorting"> Items</th>
                                <th class="nosorting"> Total</th>
                                <th class="nosorting"> Merchant</th>
                                <th class="nosorting"> </th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary x-right" id="searchOrderByNumberOrId">Search</button>
            </div>
        </div>
    </div>
</div>
@*<div class="row">
    <button type="button" class="btn btn-primary" id="searchOrder">Search Order</button>
</div>*@


<div id="myModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Range</h4>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-2">
                            <label class="label">From</label>
                        </div>
                        <div class='col-sm-6'>
                            <div class="form-group">
                                <div class='input-group date'>
                                    <input type='date' class="form-control" id='datepicker2From' />
                                    @*<span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>*@
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-sm-2">
                            <label class="label">To</label>
                        </div>
                        <div class='col-sm-6'>
                            <div class="form-group">
                                <div class='input-group date'>
                                    <input type='date' class="form-control" id='datepicker2To' />
                                    @*<span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>*@
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="searchRange" data-dismiss="modal">Search</button>
            </div>
        </div>
    </div>
</div>

<div id="collectModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Update</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <p>Update Colelction Date ?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="order-collect">Collect</button>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/js/bootstrap-datepicker.min.js"></script>
    <script src="~/Scripts/admin.transactions.js"></script>


}
